# This bootstrap file is useful for vmware templates
echo "Regenerating host keys"
KEYS="rsa dsa"

for KEY in $KEYS
do
  rm /etc/ssh/ssh_host_${KEY}_key
  ssh-keygen -f /etc/ssh/ssh_host_${KEY}_key -N '' -t $KEY
done

echo "Upgrading system"
apt-get update && apt-get dist-upgrade -y

echo "Cleaning up"
rm /etc/rc2.d/S99bootstrap
chmod +x /etc/rc2.d/*bootstrap
reboot
